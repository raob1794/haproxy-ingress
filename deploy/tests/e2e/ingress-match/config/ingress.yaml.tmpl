{{$pathType:=.PathTypeSupported}}
---
kind: Ingress
apiVersion: networking.k8s.io/v1
metadata:
  name: http-echo
  annotations:
    ingress.class: haproxy
spec:
  rules:
    {{- range .Rules }}
    - host: "{{.Host}}"
      http:
        paths:
          - path: {{.Path}}
					{{- if $pathType}}
            pathType: {{.PathType}}
          {{- end}}
            backend:
              service:
                name: {{.Service}}
                port:
                  name: http
    {{- end}}
